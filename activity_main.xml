<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id='@+id/Background'
        android:layout_width="418dp"
        android:layout_height="742dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"/>

    <TextView
        android:id="@+id/HealthText1"
        android:layout_width="188dp"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="136dp"
        android:text="Starshiplad's health"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/SubtractButton1"
        android:layout_width="101dp"
        android:layout_height="46dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/SubtractHealth"
        app:layout_constraintStart_toStartOf="@+id/HealthText1"
        app:layout_constraintTop_toTopOf="@+id/HealthText1" />

    <ImageView
        android:id="@+id/AddButton1"
        android:layout_width="101dp"
        android:layout_height="46dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:contentDescription="@string/AddHealth"
        app:layout_constraintEnd_toEndOf="@+id/HealthText1"
        app:layout_constraintTop_toTopOf="@+id/HealthText1" />

    <!-- android:text="@string/SubtractHealth  If button use text-->
    <ImageView
        android:id="@+id/SubtractButton2"
        android:layout_width="101dp"
        android:layout_height="46dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/SubtractHealth"
        app:layout_constraintStart_toStartOf="@+id/HealthText2"
        app:layout_constraintTop_toTopOf="@+id/HealthText2" />

    <ImageView
        android:id="@+id/AddButton2"
        android:layout_width="101dp"
        android:layout_height="46dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/AddHealth"
        app:layout_constraintEnd_toEndOf="@+id/HealthText2"
        app:layout_constraintTop_toTopOf="@+id/HealthText2" />

    <TextView
        android:id="@+id/HealthText2"
        android:layout_width="173dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="272dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="Starshiplass's Health"
        app:layout_constraintBottom_toTopOf="@+id/HealthText1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.003" />
    <!-- Name entry -->


</android.support.constraint.ConstraintLayout>